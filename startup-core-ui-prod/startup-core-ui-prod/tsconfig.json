{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "ui/*": [
        "ui/*"
      ],
      "lib/*": [
        "lib/*"
      ],
      "utils/*": [
        "utils/*"
      ],
      "components/*": [
        "components/*"
      ],
      "context/*": [
        "context/*"
      ],
      "features/*": [
        "features/*"
      ],
      "hooks/*": [
        "hooks/*"
      ],
      "layouts/*": [
        "layouts/*"
      ],
      "pages/*": [
        "pages/*"
      ],
      "types/*": [
        "types/*"
      ],
      "validations/*": [
        "validations/*"
      ],
      "assets/*": [
        "assets/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
